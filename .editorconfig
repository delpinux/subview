# EditorConfig: https://EditorConfig.org
# Editorconfig plugin for emacs: https://github.com/editorconfig/editorconfig-emacs

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# Various options
trim_trailing_whitespace = true

# 2 space indentation
indent_style = space
indent_size = 2
